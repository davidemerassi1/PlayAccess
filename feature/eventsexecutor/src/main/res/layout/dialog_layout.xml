<?xml version="1.0" encoding="utf-8"?>
<actionsConfigurator.utils.EventDialog xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="26dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/errorRetrievingActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Impossibile ottenere le azioni. Verifica che il servizio di accessibilità sia attivo"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/availableActionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/mainActionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/appBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <!-- Opzione 1 -->
                    <TextView
                        android:id="@+id/touchOptionTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:tag="SCREEN_GESTURE"
                        android:text="TOCCO"
                        android:textColor="@color/primaryColor"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <!-- Opzione 2 -->
                    <TextView
                        android:id="@+id/externalButtonOptionTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:tag="BUTTON"
                        android:text="PULSANTE ESTERNO"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/faceOptionTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:tag="FACIAL_EXPRESSION"
                        android:text="VOLTO"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16dp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/selectionLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/noEventsTextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nessuna azione disponibile"
                        android:textAlignment="center"
                        android:visibility="gone" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </ScrollView>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/selectSwipeDirectionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Direzione swipe:" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/additional_actions_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move left:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/actionLeftTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select an action..."
                        android:textAlignment="textEnd"
                        android:textColor="@color/primaryColor"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move right:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/actionRightTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select an action..."
                        android:textAlignment="textEnd"
                        android:textColor="@color/primaryColor"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset pointer:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/actionResetTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select an action..."
                        android:textAlignment="textEnd"
                        android:textColor="@color/primaryColor"
                        android:textSize="15sp" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/resetToStartCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Reset alla posizione iniziale" />
            </LinearLayout>
        </FrameLayout>

        <!-- Pulsanti OK e Annulla -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="end">

            <FrameLayout
                android:id="@+id/deleteButtonLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:text="Elimina"
                    android:textColor="@android:color/holo_red_light" />
            </FrameLayout>

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="0dp"
                android:text="Annulla"
                android:textColor="@color/primaryColor" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="0dp"
                android:text="OK"
                android:textColor="@color/primaryColor" />
        </LinearLayout>

        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select an event to continue"
            android:textColor="#FF0000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sameEventErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questo evento è già associato a un'altra azione"
            android:textColor="#FF0000"
            android:visibility="gone" />
    </LinearLayout>

</actionsConfigurator.utils.EventDialog>