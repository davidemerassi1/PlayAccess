<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resizable_sliding_button_layout"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_line" />

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background_white"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/monodimensional_sliding_icon" />

    <ImageButton
        android:id="@+id/resize_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_background_primary"
        android:elevation="10dp"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/horizontal_arrows" />
</RelativeLayout>
