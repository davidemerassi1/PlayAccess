<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment.facialexpression.DefineFacialExpressionFragment">

        <LinearLayout
            android:id="@+id/loadingErrorState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_very_large"
            android:elevation="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/facialExpressionFramesList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:fontFamily="@font/metropolis"
                android:gravity="center_horizontal"
                android:text="@string/feraction_insert_name"
                android:textSize="@dimen/P4_text_size"
                android:labelFor="@+id/facialExpressionName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/facialExpressionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin_large_plus"
                android:fontFamily="@font/metropolis"
                android:gravity="center_horizontal"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textSize="@dimen/P4_text_size" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/facialExpressionFramesList"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:paddingTop="@dimen/default_margin_small_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/facial_expression_frame"
            tools:itemCount="5"
            />

        <com.ortiz.touchview.TouchImageView
            android:id="@+id/zoomedFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:visibility="gone"
            android:elevation="5dp"
            android:backgroundTint="@color/black_semitransparent"
            android:contentDescription="@string/feraction_frame_content_description"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/default_margin_small_plus"
            android:layout_marginBottom="@dimen/default_margin_large"
            >

            <include
                android:id="@+id/facialExpressionRecordAgain"
                layout="@layout/action_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/default_margin_small"
                app:text="@{@string/feraction_retry_button}"
                app:border="@{@drawable/red_button_border}"
                />

            <include
                android:id="@+id/facialExpressionConfirm"
                layout="@layout/action_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/default_margin_small"
                app:text="@{@string/confirm}"
                app:border="@{@drawable/red_button_border}"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>