<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="it.unimi.di.ewlab.iss.actionsconfigurator.viewmodel.AggiungiAzioneViewModel" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:id="@+id/aggiungiPulsanteEsterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_small_plus"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:background="@drawable/blue_button_background"
            android:elevation="5dp"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/image_rounded_icon"
                android:layout_height="@dimen/image_rounded_icon"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin_small"
                android:layout_marginVertical="@dimen/default_margin"
                android:src="@drawable/controller_blue"
                android:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:fontFamily="@font/metropolis"
                android:gravity="start|center_vertical"
                android:textAlignment="textStart"
                android:text="@string/external_button"
                android:textSize="@dimen/P4_text_size"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/aggiungiEspressioneFacciale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_small_plus"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:background="@drawable/red_button_background"
            android:elevation="5dp"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/image_rounded_icon"
                android:layout_height="@dimen/image_rounded_icon"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin_small"
                android:layout_marginVertical="@dimen/default_margin"
                android:src="@drawable/facial_expression_white"
                android:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:fontFamily="@font/metropolis"
                android:gravity="start|center_vertical"
                android:textAlignment="textStart"
                android:text="@string/facial_expression"
                android:textSize="@dimen/P4_text_size"
                android:textColor="@color/white" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:paddingTop="@dimen/default_margin_small_plus">

            <Button
                android:id="@+id/backToListaAzioni"
                android:layout_width="@dimen/button_select_action"
                android:layout_height="@dimen/button_select_action"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin_small_plus"
                android:background="@drawable/green_button_background_circular"
                android:fontFamily="@font/metropolis"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                android:rotation="45"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="@dimen/H2_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>