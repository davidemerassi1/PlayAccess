<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="it.unimi.di.ewlab.iss.actionsconfigurator.ui.adapter.itemaction.ActionItem" />

    </data>

    <LinearLayout
        android:id="@+id/actionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/red_button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_info"
            android:layout_width="@dimen/image_rounded_icon"
            android:layout_height="@dimen/image_rounded_icon"
            android:layout_marginEnd="@dimen/default_margin_small"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:src="@drawable/info_white"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/actionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="NOME AZIONE"
            android:fontFamily="@font/metropolis"
            android:textSize="@dimen/P4_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/deleteAction"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_icon_normal_height"
            android:layout_marginEnd="@dimen/default_margin_small"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/actiondetails_delete_action_content_description"
            android:src="@drawable/close_white"
            app:tint="@color/red"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

    </LinearLayout>
</layout>