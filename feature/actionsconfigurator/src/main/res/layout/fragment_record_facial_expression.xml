<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.facialexpression.RecordFacialExpressionFragment">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/loadingCameraProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateTint="@color/red"
        android:indeterminate="true"
        />

    <TextView
        android:id="@+id/expressionType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis"
        android:textSize="@dimen/P4_text_size"
        android:layout_marginTop="@dimen/default_margin_large"
        android:text="@string/feraction_new_expression_message"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/cameraCapture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/expressionType"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@id/startAcquisitionButton"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/feraction_camera_capture_content_description" />

    <include
        android:id="@+id/startAcquisitionButton"
        layout="@layout/action_button"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_large_plus"
        android:layout_marginRight="@dimen/default_margin_large_plus"
        android:layout_marginBottom="@dimen/default_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:text="@{@string/feraction_start_acquisition_button}"
        app:border="@{@drawable/red_gray_button_border}"
        />

    <include
        android:id="@+id/missingFaceErrorBox"
        layout="@layout/message_box"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cameraCapture"
        app:layout_constraintBottom_toBottomOf="@id/cameraCapture"
        app:layout_constraintStart_toStartOf="@id/cameraCapture"
        app:layout_constraintEnd_toEndOf="@+id/cameraCapture"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.90"
        app:text="@{@string/feraction_face_missing_error}"
        app:maxLines="@{3}"
        />

    <include
        android:id="@+id/missingLandmarkErrorBox"
        layout="@layout/message_box"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cameraCapture"
        app:layout_constraintBottom_toBottomOf="@id/cameraCapture"
        app:layout_constraintStart_toStartOf="@id/cameraCapture"
        app:layout_constraintEnd_toEndOf="@+id/cameraCapture"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.90"
        app:text="@{@string/feraction_landmarks_missing_error}"
        app:maxLines="@{3}"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>