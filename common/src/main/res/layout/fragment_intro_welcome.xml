<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unimi.di.ewlab.iss.common.ui.intro.fragments.IntroWelcomeFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_medium"
        android:layout_marginBottom="@dimen/default_margin"
        android:elevation="10dp"
        android:gravity="center"
        android:text="@string/intro_welcome_message"
        android:textAlignment="center"
        android:textSize="@dimen/H4_text_size"
        app:layout_constraintBottom_toTopOf="@+id/playAccessLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/playAccessLogo"
        android:layout_width="@dimen/splashscreen_logo"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/playaccess_logo_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>